<div class="background-image">
  <div class="user-container">
    <div class="user">
      <div class="user-image">
          <% if @user.avatar.present? %>
            <%= cl_image_tag @user.avatar.key, height: 300, width: 400, crop: :fill, class: 'profile-avatar' %>
        <% end %>
      </div>
      <div class="user-info">
        <h1>
          <%= @user.first_name %> <%= @user.last_name %>
        </h1>
        <div class="bio">
          <%= @user.bio %>
        </div>
        <div class="user-controls mt-4">
          <h3 class="btn btn-success"><%= link_to "Add a studio", new_studio_path %></h3>
          <h3 class="btn btn-warning"><%= link_to "Edit account", edit_user_registration_path %></h3>
        </div>
      </div>
    </div>

    <div class="container mt-4">
      <% if @user.bookings %>
        <%= render "bookings/my_bookings" %>
      <% end %>
      <% if @studios.first != nil %>
        <%= render "bookings/host_bookings" %>
      <% end %>
    </div>
  </div>
</div>
