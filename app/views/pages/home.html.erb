<h4 class="ml-4">Studios in demand now:</h4>
<div class="studios m-2">
  <% @studios.each do |studio| %>
    <%= link_to studio_path(studio) do %>
      <div class="studio-card", style="background-image: linear-gradient(-155deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.8)), url('https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn.merriammusic.com%2F2016%2F02%2Frecording-studio-control-room-center.jpg&f=1&nofb=1'); background-size: cover;">
        <div class="studio-card-info">
          <h4><%= studio.name %></h4>
          <p><i class="fas fa-map-marker-alt"></i> <%= studio.location %></p>
        </div>
        <div class="studio-card-price">
          <p><i class="fas fa-pound-sign"></i> <%= studio.price %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>




