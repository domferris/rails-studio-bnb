

<div class="container">

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="mt-4">New Booking</h1>
      <%= simple_form_for [@studio, @booking] do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :description,
                      autofocus: true %>
          <%= f.input :booking_date_start %>
          <%= f.input :booking_date_end %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Submit", class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

