<h1>New Booking</h1>

<div class="container">
  <%= simple_form_for [@studio, @booking] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :description,
                  autofocus: true %>
      <%= f.input :booking_date_start %>
      <%= f.input :booking_date_end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Submit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

